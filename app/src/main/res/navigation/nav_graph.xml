<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dibdroid.animeapp.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

    <action
        android:id="@+id/action_HomeFragment_To_Details_Fragment"
        app:destination="@+id/detailsFragment"/>

    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.dibdroid.animeapp.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">

    <argument
        android:name="animeId"
        app:argType="integer"/>
    </fragment>

    <fragment
        android:id ="@+id/favoriteFragment"
        android:name="com.dibdroid.animeapp.FavoriteFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorite"/>


</navigation>